<section id="contestant-index">
<% flash.each do |name, msg| %>
	<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
		<a class="close" data-dismiss="alert">Ã—</a><!--/.close-->
		<%= msg %>
	</div><!--/.alert.alert-'name'--> 
<% end %>
<% @contestants.each do |contestant| %>
	<p><span class="strong"><%= contestant.name %></span></p>
	<p><span class="strong"><%= contestant.video_url %></span></p>
	<p><span class="strong"><%= contestant.votes %></span></p>
	<% if current_user != nil %>
	<p><span class="btn btn-primary"><%= link_to "vote", vote_contestant_path(contestant, value: 1), 
						        method: "post" %></span></p>
	<% else %>
	<p>fix the sign in!</p>
	<% end %>
<% end %>
</section>